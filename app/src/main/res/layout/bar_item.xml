<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_xsmall"
        android:elevation="2dp"
        card_view:cardCornerRadius="@dimen/card_corner">

        <TextView
            android:id="@+id/txt_bar_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCardview_bar_background"
            android:gravity="left"
            android:padding="8dp"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:textColor="@color/colorCardview_bar_text"
            android:textStyle="bold"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/txt_bar_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:padding="8dp"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:textColor="@color/colorCardview_bar_text"
            android:textSize="@dimen/text_small" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
</layout>